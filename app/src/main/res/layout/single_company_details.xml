<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="10dp"
  android:layout_marginLeft="5dp"
  android:layout_marginRight="5dp"
  card_view:cardCornerRadius="2dp"
  card_view:cardElevation="4dp"
  card_view:cardUseCompatPadding="true">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
      android:id="@+id/tvCompanyName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Loading"
      android:layout_marginTop="5dp"
      android:layout_toRightOf="@+id/imageLogo"
      android:textColor="#000"
      android:textSize="20sp"/>


    <TextView
      android:id="@+id/tvCompanyEmail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:layout_below="@+id/tvCompanyName"
      android:layout_toRightOf="@+id/imageLogo"
      android:text="Loading"
      android:textColor="#000"
      android:textSize="15sp"/>


    <TextView
      android:id="@+id/tvCompanyMobile"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:layout_below="@+id/tvCompanyEmail"
      android:layout_toRightOf="@+id/imageLogo"
      android:text="Loading"
      android:textColor="#000"
      android:textSize="15sp"/>

    <ImageView
      android:id="@+id/imageLogo"
      android:layout_width="95dp"
      android:layout_height="95dp"
      android:paddingRight="10dp"
      android:layout_marginLeft="5dp"
      card_view:srcCompat="@android:drawable/sym_def_app_icon"/>


  </RelativeLayout>
</android.support.v7.widget.CardView>